<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tree_card"
    android:layout_gravity="center"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_centerHorizontal="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="300dp">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:id="@+id/image_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_item"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:textSize="@dimen/abc_text_size_title_material"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:layout_marginLeft="14dp"
            android:layout_alignBottom="@+id/image_item"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="18dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/creator_item"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:fontFamily="sans-serif-regular"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/image_item"
            android:layout_alignLeft="@+id/title_item"
            android:layout_alignStart="@+id/title_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_item"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/creator_item"
            android:layout_alignLeft="@+id/creator_item"
            android:layout_alignStart="@+id/creator_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaf_number_item"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_below="@+id/description_item"
            android:layout_alignLeft="@+id/description_item"
            android:layout_alignStart="@+id/description_item" />

    </RelativeLayout>
</android.support.v7.widget.CardView>